<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SaveActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/btnSubmit"
        android:layout_margin="@dimen/parentMargin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- todo: collapsible-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Save "
                        android:textSize="@dimen/h1"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Title"
                        android:textSize="@dimen/h1"
                        android:textStyle="bold"
                        android:textColor="@color/secondaryAccent">

                    </TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="Search and add details for your favorite movies and tv shows"
                    android:textSize="@dimen/h2">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginKeys"
                    android:text="Title"
                    android:textColor="@color/tertiaryAccent">

                </TextView>

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/svTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:backgroundTint="@color/primaryAccent"
                    android:drawableTint="@android:color/white"
                    android:hint="Start Typing"
                    style="@style/SearchViewStyle"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_searchedTitles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginKeys"
                    android:text="Director"
                    android:textColor="@color/tertiaryAccent">

                </TextView>

                <EditText
                    android:id="@+id/etDirector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:backgroundTint="@color/primaryAccent"
                    android:drawableTint="@android:color/white"
                    android:hint="Start Typing"
                    android:padding="@dimen/etPadding">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginKeys"
                    android:text="Actors"
                    android:textColor="@color/tertiaryAccent">

                </TextView>

                <EditText
                    android:id="@+id/etActors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:backgroundTint="@color/primaryAccent"
                    android:drawableTint="@android:color/white"
                    android:hint="Start Typing"
                    android:padding="@dimen/etPadding">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/marginKeys"
                        android:text="Year"
                        android:textColor="@color/tertiaryAccent">

                    </TextView>

                    <EditText
                        android:id="@+id/etYear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primary"
                        android:backgroundTint="@color/primaryAccent"
                        android:drawableTint="@android:color/white"
                        android:hint="Start Typing"
                        android:padding="@dimen/etPadding">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/marginKeys"
                        android:text="Language"
                        android:textColor="@color/tertiaryAccent">

                    </TextView>

                    <EditText
                        android:id="@+id/etLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primary"
                        android:backgroundTint="@color/primaryAccent"
                        android:drawableTint="@android:color/white"
                        android:hint="Start Typing"
                        android:padding="@dimen/etPadding">

                    </EditText>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginKeys"
                    android:text="Imdb Ratings"
                    android:textColor="@color/tertiaryAccent">

                </TextView>

                <EditText
                    android:id="@+id/etImdbRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:backgroundTint="@color/primaryAccent"
                    android:drawableTint="@android:color/white"
                    android:hint="Start Typing"
                    android:padding="@dimen/etPadding">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginKeys"
                    android:text="My Ratings"
                    android:textColor="@color/tertiaryAccent">

                </TextView>

                <EditText
                    android:id="@+id/etMyRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:backgroundTint="@color/primaryAccent"
                    android:drawableTint="@android:color/white"
                    android:hint="Start Typing"
                    android:padding="@dimen/etPadding">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/marginKeys"
                        android:text="Collection"
                        android:textColor="@color/tertiaryAccent">

                    </TextView>

                    <EditText
                        android:id="@+id/etCollection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primary"
                        android:backgroundTint="@color/primaryAccent"
                        android:drawableTint="@android:color/white"
                        android:hint="Start Typing"
                        android:padding="@dimen/etPadding">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/marginKeys"
                        android:text="Sub Collection"
                        android:textColor="@color/tertiaryAccent">

                    </TextView>

                    <EditText
                        android:id="@+id/etSubCollection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primary"
                        android:backgroundTint="@color/primaryAccent"
                        android:drawableTint="@android:color/white"
                        android:hint="Start Typing"
                        android:padding="@dimen/etPadding">

                    </EditText>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/parentMargin"
        android:backgroundTint="@color/secondary"
        android:padding="20dp"
        android:text="Save Details"
        android:textSize="@dimen/h2"
        app:cornerRadius="@dimen/cornerRadius">

    </com.google.android.material.button.MaterialButton>

</RelativeLayout>